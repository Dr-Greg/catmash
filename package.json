{
  "name": "catmash",
  "version": "1.0.0",
  "author": "Grigor Mouradyan <grigor.mouradyan@gmail.com>",
  "description": "CatMash is a FaceMash like application for cats, implemented in NodeJS",
  "license": "MIT",
  "main": "src/server.js",
  "scripts": {
    "start": "ENVIRONMENT=prod node ./src/server",
    "dev": "ENVIRONMENT=dev nodemon ./src/server",
    "test": "ENVIRONMENT=test jest",
    "lint": "eslint .",
    "chore:check": "npm outdated",
    "chore:update": "npx npm-check-updates -u && npm install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Dr-Greg/catmash.git"
  },
  "bugs": {
    "url": "https://github.com/Dr-Greg/catmash/issues"
  },
  "homepage": "https://github.com/Dr-Greg/catmash#readme",
  "keywords": [
    "CatMash",
    "FaceMash",
    "NodeJS"
  ],
  "dependencies": {
    "axios": "^0.21.0",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "http-status-codes": "^2.1.4",
    "mongoose": "^5.10.7"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^11.0.0",
    "commitlint": "^11.0.0",
    "eslint": "^7.9.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-node": "^4.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.2",
    "eslint-plugin-react-hooks": "^4.1.2",
    "husky": "^4.3.0",
    "jest": "^26.6.1",
    "lint-staged": "^10.4.0",
    "nodemon": "^2.0.6",
    "prettier": "^2.1.2",
    "supertest": "^6.0.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "./node_modules/commitlint/cli.js -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "npm run lint"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "lines": 50
      }
    }
  }
}
